WindowManager:
	FirstWindow:
	    id: screen1
	SecondWindow:
	    id:screen2


<FirstWindow>:
	name: "first"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "First Screen"
			font_size: 32

		Button:
			text: "Самса"
			font_size: 32
			on_release: 
				app.root.current = "second"
				root.manager.transition.direction = "left"

		Button:
			text: "Завершение дня"
			font_size: 32
			on_release:
			    root.press2()



<SecondWindow>:
	name: "second"



	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "Second Screen"
			font_size: 32

        TextInput:
            id: count
            hint_text: "count"


		Button:
			text: "Go Back"
			font_size: 32
			on_release: 
				app.root.current = "first"
				root.manager.transition.direction = "right"

		Button:
			text: "Сохранить"
			font_size: 32
			on_release:
			    root.press()
			    app.root.current = "first"
			    root.manager.transition.direction = "right"